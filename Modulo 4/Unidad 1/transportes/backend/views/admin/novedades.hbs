<div class="container" style="margin-top: 50px auto;">
  
  {{! Fila 1}}
    <div class="row">    
        <p class="text-end">Bienvenido
        {{usuario}}!
         <a class="btn btn-danger" href="/admin/login/logout">Cerrar Sesi&oacute;n
        <i class="fas fa-sign-out-alt"></i></a></p>
       
    </div>
   {{! Fin Fila 1}}


  {{! Fila 2}}
    <div class="row">
            <div class="col-7">
                <h3>Listado de novedades</h3>
            </div>
             <div class="col-5 text-end">
                <a class="btn btn-success" href="/admin/novedades/agregar"><i class="fa fa-plus"aria-hidden="true"></i>Nuevo</a>
            </div>
    
    </div>
{{! Fin Fila 2}}
  {{! Fila 3}}
  <div class="row">
     <div class="col">
      <table class="table table-striped table-bordered">
        <thead>
          <tr class="table-dark">
            <th class="text-center" scope="col">#</th>
            <th class="text-center" scope="col">Titulo</th>
            <th class="text-center" scope="col">Subtitulo</th>
            <th class="text-center" scope="col">Imagen</th>
            <th class="text-center" class="text-end">Acciones</th>
          </tr>
        </thead>
        <tbody>
            {{#each novedades}}
          <tr>
            <th scope="row" class="align-middle">{{id}}</th>
            <td class="align-middle">{{titulo}}</td>            
            <td class="align-middle">{{subtitulo}}</td>
            <td class="align-middle">{{{imagen}}}</td>
            <td class="text-center align-middle">
              <div style="width: 100px;">
                <a class="btn btn-secondary " href="/admin/novedades/modificar/{{id}}" style="font-size: 10px"><i class="fa-solid fa-pen-to-square" aria-hidden="true"></i></a>
                <a class="btn btn-secondary" href="/admin/novedades/eliminar/{{id}}" style="font-size: 10px"><i class="fa fa-trash" aria-hidden="true"></i></a>
              </div>
            </td>
          </tr>
         {{/each}} 
        </tbody>
      </table>
    </div>

 </div>
  {{! Fin Fila 3}}
</div>